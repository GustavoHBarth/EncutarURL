@{
    ViewData["Title"] = "URL Encurtada";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h2 class="mb-4">✅ URL Encurtada com Sucesso!</h2>

                    <div class="alert alert-success">
                        <strong>Parabéns!</strong> Sua URL foi encurtada com sucesso.
                    </div>

                    <p><strong>URL Original:</strong></p>
                    <a href="@ViewData["OriginalUrl"]" target="_blank" class="text-primary">
                        @ViewData["OriginalUrl"]
                    </a>

                    <p class="mt-3"><strong>URL Encurtada:</strong></p>
                    <div class="input-group">
                        <input type="text" id="shortUrl" class="form-control text-center" value="@ViewData["ShortenedUrl"]" readonly>
                        <button id="copyButton" class="btn btn-success">
                            <i class="fas fa-copy"></i> Copiar
                        </button>
                    </div>

                    <div id="copyMessage" class="text-success mt-2" style="display: none;">
                        ✅ URL copiada para a área de transferência!
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('copyButton').addEventListener('click', function () {
        var copyText = document.getElementById('shortUrl');
        copyText.select();
        navigator.clipboard.writeText(copyText.value)
            .then(() => {
                document.getElementById('copyMessage').style.display = 'block';
                setTimeout(() => {
                    document.getElementById('copyMessage').style.display = 'none';
                }, 2000);
            })
            .catch(err => alert('Erro ao copiar a URL: ' + err));
    });
</script>
